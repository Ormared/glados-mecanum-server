<?xml version="1.0"?>
<robot name="glados" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <!-- Constants -->
  <xacro:property name="base_link_mass" value="1.14395"/>
  <xacro:property name="wheel_mass" value="2"/>
  <xacro:property name="wheel_radius" value="0.3"/>
  <xacro:property name="wheel_separation" value="1.25"/>
  <xacro:property name="wheelbase" value="1.511"/>
  
  <!-- base_link dimensions -->
  <xacro:property name="base_link_length" value="2.01142"/>
  <xacro:property name="base_link_width" value="1.0"/>
  <xacro:property name="base_link_height" value="0.568726"/>
  
  <!-- Positions -->
  <xacro:property name="base_link_offset_x" value="-0.151427"/>
  <xacro:property name="base_link_offset_z" value="0.175"/>
  <xacro:property name="wheel_offset_z" value="-0.025"/>
  
  <!-- Colors -->
  <xacro:property name="base_link_color_r" value="0.5"/>
  <xacro:property name="base_link_color_g" value="0.5"/>
  <xacro:property name="base_link_color_b" value="1.0"/>
    
  <!-- Wheel macros -->
  <xacro:macro name="wheel_inertia" params="mass radius">
    <inertial>
      <mass value="${mass}"/>
      <inertia 
        ixx="${(mass/12.0) * (3*radius*radius)}" 
        ixy="0" 
        ixz="0"
        iyy="${(mass/12.0) * (3*radius*radius)}" 
        iyz="0"
        izz="${(mass/2.0) * (radius*radius)}"/>
    </inertial>
  </xacro:macro>

  <!-- Base Footprint -->
  <link name="base_footprint"/>

  <!-- Base Link -->
  <link name="base_link">
    <inertial>
      <mass value="${base_link_mass}"/>
      <inertia
        ixx="0.126164"
        ixy="0"
        ixz="0"
        iyy="0.416519"
        iyz="0"
        izz="0.481014"/>
    </inertial>
    <visual>
      <geometry>
        <box size="${base_link_length} ${base_link_width} ${base_link_height}"/>
      </geometry>
      <material name="base_link_material">
        <color rgba="${base_link_color_r} ${base_link_color_g} ${base_link_color_b} 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="${base_link_length} ${base_link_width} ${base_link_height}"/>
      </geometry>
    </collision>
  </link>

  <joint name="base_link_to_base_footprint" type="fixed">
    <parent link="base_footprint"/>
    <child link="base_link"/>
  </joint>

  <!-- Wheel macro -->
  <xacro:macro name="mecanum_wheel" params="prefix side_prefix x y mesh_file fdir1_y">
    <link name="${prefix}_${side_prefix}_wheel">
      <xacro:wheel_inertia mass="${wheel_mass}" radius="${wheel_radius}"/>
      <visual>
        <origin xyz="0 0 0" rpy="1.5707 0 0"/>
        <geometry>
          <mesh filename="${mesh_file}" scale="0.006 0.006 0.006"/>
        </geometry>
        <material name="wheel_material">
          <color rgba="0.2 0.2 0.2 1"/>
        </material>
      </visual>
      <collision>
        <geometry>
          <sphere radius="${wheel_radius}"/>
        </geometry>
      </collision>
    </link>

    <joint name="${prefix}_${side_prefix}_wheel_joint" type="revolute">
      <parent link="base_link"/>
      <child link="${prefix}_${side_prefix}_wheel"/>
      <origin xyz="${x} ${y} 0" rpy="${-pi/2} 0 0"/>
      <axis xyz="0 0 1"/>
      <limit effort="30" velocity="1.0" lower="${-pi/2}" upper="${pi/2}"/>
    </joint>

    <!-- Gazebo-specific elements -->
    <gazebo reference="${prefix}_${side_prefix}_wheel">
      <material>Gazebo/Gray</material>
      <mu1 value="1.0"/>
      <mu2 value="0.0"/>
      <fdir1>${1} ${fdir1_y} 0</fdir1>
    </gazebo>
  </xacro:macro>

  <!-- Create wheels -->
  <xacro:mecanum_wheel prefix="front" side_prefix="left" 
    x="0.554283" y="0.625029" 
    mesh_file="package://glados_description/models/glados/meshes/mecanum_wheel_left.STL" 
    fdir1_y="-1"/>
  
  <xacro:mecanum_wheel prefix="front" side_prefix="right" 
    x="0.554282" y="-0.625029" 
    mesh_file="package://glados_description/models/glados/meshes/mecanum_wheel_right.STL" 
    fdir1_y="1"/>
  
  <xacro:mecanum_wheel prefix="rear" side_prefix="left" 
    x="-0.957138" y="0.625029" 
    mesh_file="package://glados_description/models/glados/meshes/mecanum_wheel_right.STL" 
    fdir1_y="1"/>
  
  <xacro:mecanum_wheel prefix="rear" side_prefix="right" 
    x="-0.957138" y="-0.625029" 
    mesh_file="package://glados_description/models/glados/meshes/mecanum_wheel_left.STL" 
    fdir1_y="-1"/>

  <!-- Gazebo plugin -->
  <gazebo>
    <plugin name="gz::sim::systems::MecanumDrive" filename="gz-sim-mecanum-drive-system">
      <front_left_joint>front_left_wheel_joint</front_left_joint>
      <front_right_joint>front_right_wheel_joint</front_right_joint>
      <back_left_joint>rear_left_wheel_joint</back_left_joint>
      <back_right_joint>rear_right_wheel_joint</back_right_joint>
      <wheel_separation>${wheel_separation}</wheel_separation>
      <wheelbase>${wheelbase}</wheelbase>
      <wheel_radius>${wheel_radius}</wheel_radius>
      <min_acceleration>-5</min_acceleration>
      <max_acceleration>5</max_acceleration>
    </plugin>
  </gazebo>

</robot>