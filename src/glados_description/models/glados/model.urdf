<?xml version="1.0"?>
<robot name="glados">

  <!-- Base Link -->
  <link name="base_footprint"/>

  <!-- Chassis -->
  <link name="chassis">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="1.14395"/>
      <inertia ixx="0.126164" ixy="0" ixz="0" iyy="0.416519" iyz="0" izz="0.481014"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.65 0.245 0.05"/>
      </geometry>
      <material name="chassis_material">
        <color rgba="0.5 0.5 0.5 1"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.65 0.245 0.05"/>
      </geometry>
    </collision>
  </link>

  <joint name="base_footprint_to_chassis" type="fixed">
    <parent link="base_footprint"/>
    <child link="chassis"/>
    <origin xyz="0 0 0.0875" rpy="0 0 0"/>
  </joint>

  <!-- Wheels -->
  <!-- Front Left Wheel -->
  <link name="front_left_wheel">
    <visual>
      <origin xyz="0 0 0" rpy="1.5707 0 0"/>
      <geometry>
        <mesh filename="package://glados_description/models/glados/meshes/mecanum_wheel_left.STL" scale="0.002 0.002 0.002"/>
      </geometry>
      <material name="wheel_material">
        <color rgba="0.3 0.3 0.3 1"/>
      </material>
    </visual>
  </link>

  <joint name="front_left_wheel_joint" type="revolute">
    <parent link="chassis"/>
    <child link="front_left_wheel"/>
    <origin xyz="0.2 0.1625 0" rpy="-1.5707 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-1.79769e+308" upper="1.79769e+308" effort="0" velocity="0"/>
  </joint>

  <!-- Front Right Wheel -->
  <link name="front_right_wheel">
    <visual>
      <origin xyz="0 0 0" rpy="1.5707 0 0"/>
      <geometry>
        <mesh filename="package://glados_description/models/glados/meshes/mecanum_wheel_right.STL" scale="0.002 0.002 0.002"/>
      </geometry>
      <material name="wheel_material">
        <color rgba="0.3 0.3 0.3 1"/>
      </material>
    </visual>
  </link>

  <joint name="front_right_wheel_joint" type="revolute">
    <parent link="chassis"/>
    <child link="front_right_wheel"/>
    <origin xyz="0.2 -0.1625 0" rpy="-1.5707 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-1.79769e+308" upper="1.79769e+308" effort="0" velocity="0"/>
  </joint>

  <!-- Rear Left Wheel -->
  <link name="rear_left_wheel">
    <visual>
      <origin xyz="0 0 0" rpy="1.5707 0 0"/>
      <geometry>
        <mesh filename="package://glados_description/models/glados/meshes/mecanum_wheel_right.STL" scale="0.002 0.002 0.002"/>
      </geometry>
      <material name="wheel_material">
        <color rgba="0.3 0.3 0.3 1"/>
      </material>
    </visual>
  </link>

  <joint name="rear_left_wheel_joint" type="revolute">
    <parent link="chassis"/>
    <child link="rear_left_wheel"/>
    <origin xyz="-0.2 0.1625 0" rpy="-1.5707 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-1.79769e+308" upper="1.79769e+308" effort="0" velocity="0"/>
  </joint>

  <!-- Rear Right Wheel -->
  <link name="rear_right_wheel">
    <visual>
      <origin xyz="0 0 0" rpy="1.5707 0 0"/>
      <geometry>
        <mesh filename="package://glados_description/models/glados/meshes/mecanum_wheel_left.STL" scale="0.002 0.002 0.002"/>
      </geometry>
      <material name="wheel_material">
        <color rgba="0.3 0.3 0.3 1"/>
      </material>
    </visual>
  </link>

  <joint name="rear_right_wheel_joint" type="revolute">
    <parent link="chassis"/>
    <child link="rear_right_wheel"/>
    <origin xyz="-0.2 -0.1625 0" rpy="-1.5707 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-1.79769e+308" upper="1.79769e+308" effort="0" velocity="0"/>
  </joint>

  <!-- Lidar Sensor -->
  <link name="lidar_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.04" length="0.04"/>
      </geometry>
      <material name="lidar_material">
        <color rgba="1 0 0 1"/>
      </material>
    </visual>
  </link>

  <joint name="lidar_joint" type="fixed">
    <parent link="chassis"/>
    <child link="lidar_link"/>
    <origin xyz="0.325 0 0.045" rpy="0 0 0"/>
  </joint>

  <!-- Camera Sensor -->
  <link name="camera_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 1.5707"/>
       <geometry>
        <mesh filename="package://glados_description/models/glados/meshes/realsense.dae"/>
      </geometry>
      <material name="camera_material">
        <color rgba="0 0 1 1"/>
      </material>
    </visual>
  </link>

  <joint name="chassis_to_camera" type="fixed">
    <parent link="chassis"/>
    <child link="camera_link"/>
    <origin xyz="0.330 0 -0.0125" rpy="0 0 0"/>
  </joint>

</robot>
